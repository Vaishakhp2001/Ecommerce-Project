<section class="h-100"  >
  <div class="container  mx-auto">
    <div class="row d-flex justify-content-center align-items-center h-100 ">
      
      <div class="col-lg-12 col-12 ">
        <div class="text-black opacity-50 " style="border-radius: 0px;">
          <div class="p-md-3">
            <div class="row justify-content-center position-relative">
              <div class="col-md-10 col-lg-6 col-12 col-xl-5 order-2  border border-1px shadow order-lg-1">
               <div class="position-absolute top-0 start-50 translate-middle mt-4">
                 <img src="/images/images/logo.png" alt="">
               </div>
                <p class="text-center h3 fw-bold mb-3 mx-md-4 mt-5">Sign up</p>

                <form action="/signup" id="formdsub" class="mx-1 mx-md-4 mt-4" method="POST">
                  {{#if err}}
                  <div class="alert alert-danger ml-5 text-center" role="alert">
                    {{err}}
                  </div>
                  {{/if}}


                  {{#if msg}}
                  <div class="alert alert-danger  ml-5 text-center" role="alert">
                   {{msg}}
                  </div>
                  {{/if}}
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" id="firstname" name="firstname" class="form-control" placeholder="First name" />

                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" id="lastname" name="lastname" class="form-control" placeholder="Last name" />

                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" onchange="change(event)"/>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-phone fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="tel" id="phone" name="phone" class="form-control" placeholder="Enter your phone" />
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter your password" />
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="password" id="confirm_password" name="confirm_password" class="form-control"
                        placeholder="Repeat password" />
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-address-card fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" id="address" name="address" class="form-control"
                        placeholder="Enter your Address" />
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-map-pin fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="tel" id="pincode" name="pincode" class="form-control" placeholder="Enter your pincode" />
                    </div>
                  </div>

                  <input type="hidden" name="Wallet" value="{{amount}}">
                  <input type="hidden" name="ReferalId" value="" id="referal">


                  <div class="d-flex justify-content-center">
                    <p>Already registered?<a href="/login">Login</a></p>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 mt-3">
                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                  </div>

                </form>

              </div>
             

                

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>

  

  function change(event){
     
    referal =document.getElementById('referal')

    value = event.target.value
    value =value.split('@')[0]
    
    console.log(value)
    referal.value = value

  }

</script>