<section>
    <div class="container mt-5">
        <table class="table" id="example">
           
            <thead class="bg-primary bg-gradient">
                <tr>
                    <th>No</th>
                    <th>Category</th>
                    <th>Subcategory</th>
                    <th>Offer</th>
                    <th>Start date</th>
                    <th>End date</th>
                    <th>Options</th>
                   
                </tr>
            </thead>
            
            <tbody>
                {{#each offers}}
                <tr>
                    <td>{{counter @index}}</td>
                    <td>{{this.offers.category}}</td>   
                    <td>{{this.offers.subcategory}}</td>
                    <td>{{this.offers.discount}}</td>
                    <td>{{this.offers.start_date}}</td>
                    <td>{{this.offers.end_date}}</td>
                    
                    <td>
                        <a href="/admin/delete-category-offer?_id={{this._id}}&cat={{this.offers.category}}&sub={{this.offers.subcategory}}"><button class="btn btn-danger">Delete</button></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <a class="btn btn-primary" href="/admin/category-offer" >ADD OFFER</a>
    </div>
</section>
